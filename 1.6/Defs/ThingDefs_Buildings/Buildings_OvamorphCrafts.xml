      <texPath>Things/Building/Security/ExplosivePod</texPath>
    </graphicData>
    <designationHotKey>Misc7</designationHotKey>
    <comps>
		<li Class="CompProperties_Explosive">
			<explosiveRadius>4.9</explosiveRadius>
