<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<!-- Jelly addiction -->

	<HediffDef>
		<defName>XMT_RoyalJellyHigh</defName>
		<hediffClass>Hediff_High</hediffClass>
		<label>jelly high</label>
		<description>the body is being boosted by trace presence of a mutagenic biopolymer.</description>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<painFactor>0.0</painFactor>
				<statOffsets>
					<ImmunityGainSpeed>2</ImmunityGainSpeed>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>1.0</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>2</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.5</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.5</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="Xenomorphtype.HediffCompProperties_Obsession">
				<obsessionGain>0.1</obsessionGain>
			</li>
			<li Class="Xenomorphtype.HediffCompProperties_Mutator">
				<probability>0.01</probability>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-2</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>XMT_RawJellyHigh</defName>
		<hediffClass>Hediff_High</hediffClass>
		<label>jelly high</label>
		<description>the body is being boosted by trace presence of a mutagenic biopolymer.</description>
		<scenarioCanAdd>false</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<stages>
			<li>
				<painFactor>0.8</painFactor>
				<statOffsets>
					<ImmunityGainSpeed>0.5</ImmunityGainSpeed>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Moving</capacity>
						<offset>0.05</offset>
					</li>
					<li>
						<capacity>Sight</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<offset>1</offset>
					</li>
					<li>
						<capacity>BloodPumping</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<offset>0.1</offset>
					</li>
					<li>
						<capacity>Breathing</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="Xenomorphtype.HediffCompProperties_Obsession">
				<obsessionGain>0.01</obsessionGain>
			</li>
			<li Class="Xenomorphtype.HediffCompProperties_Mutator">
				<probability>0.005</probability>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-4</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
	</HediffDef>
	
	<ChemicalDef>
		<defName>XMT_Essence</defName>
		<label>mutagenic biopolymer</label>
		<addictionHediff>XMT_EssenceAddiction</addictionHediff>
		<canBinge>true</canBinge>
		<generateAddictionGenes>false</generateAddictionGenes>
	</ChemicalDef>

	<NeedDef ParentName="DrugAddictionNeedBase">
		<defName>XMT_Chemical_Essence</defName>
		<needClass>Need_Chemical</needClass>
		<label>Mutagenic Biopolymer</label>
		<description>This subject's body has become critically dependant on a foreign substance to sustain their immune system.</description>
		<listPriority>45</listPriority>
		<fallPerDay>0.15</fallPerDay>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
	</NeedDef>

	<HediffDef ParentName="AddictionBase">
		<defName>XMT_EssenceAddiction</defName>
		<label>immunological failure</label>
		<description>This sibject's immune system has completely been suplanted by a mutagenic biopolymer which they must ingest to avoid lethal organ failure.</description>
		<hediffClass>Hediff_Addiction</hediffClass>
		<chemicalNeed>XMT_Chemical_Essence</chemicalNeed>
		<everCurableByItem>false</everCurableByItem>
		<stages>
			<li>
			</li>
			<li>
				<label>unmet</label>
				<painOffset>0.4</painOffset>
				<lifeThreatening>true</lifeThreatening>
				<deathMtbDays>10</deathMtbDays>
				<mtbDeathDestroysBrain>true</mtbDeathDestroysBrain>
				<statFactors>
					<ImmunityGainSpeed>0.0</ImmunityGainSpeed>
				</statFactors>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<setMax>0.8</setMax>
					</li>
					<li>
						<capacity>BloodFiltration</capacity>
						<setMax>0</setMax>
					</li>
					<li>
						<capacity>Metabolism</capacity>
						<setMax>0.1</setMax>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>Berserk</mentalState>
						<mtbDays>0.4</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
		<comps>
			<li Class="Xenomorphtype.HediffCompProperties_Obsession">
				<obsessionGain>0.25</obsessionGain>
			</li>
			<li Class="Xenomorphtype.HediffCompProperties_Mutator">
				<probability>0.01</probability>
			</li>
		</comps>
	</HediffDef>
	
	<HediffDef>
		<defName>XMT_Slowdown</defName>
		<hediffClass>HediffWithComps</hediffClass>
		<label>metabolic slowdown</label>
		<description>metabolic activity is slowing as the organism's life cycle begins to wind down.</description>
		<everCurableByItem>true</everCurableByItem>
		<initialSeverity>0.0001</initialSeverity>
		<stages>
			<li>
				<label>onset</label>
				
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.95</WorkSpeedGlobal>
					<RestRateMultiplier>0.95</RestRateMultiplier>
				</statFactors>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.2</minSeverity>
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.85</WorkSpeedGlobal>
					<RestRateMultiplier>0.85</RestRateMultiplier>
				</statFactors>
			</li>
			<li>
				<label>medium</label>
				<minSeverity>0.3</minSeverity>
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.75</WorkSpeedGlobal>
					<RestRateMultiplier>0.75</RestRateMultiplier>
				</statFactors>
			</li>
			<li>
				<label>severe</label>
				<minSeverity>0.5</minSeverity>
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.5</WorkSpeedGlobal>
					<RestRateMultiplier>0.5</RestRateMultiplier>
				</statFactors>
			</li>
			<li>
				<label>debilitating</label>
				<minSeverity>0.75</minSeverity>
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.25</WorkSpeedGlobal>
					<RestRateMultiplier>0.25</RestRateMultiplier>
				</statFactors>
			</li>
			<li>
				<label>debilitating</label>
				<minSeverity>1</minSeverity>
				<lifeThreatening>false</lifeThreatening>
				<statFactors>
					<WorkSpeedGlobal>0.1</WorkSpeedGlobal>
					<RestRateMultiplier>0.1</RestRateMultiplier>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_RemoveIfOtherHediff">
				<hediffs>
					<li>XMT_RoyalJellyHigh</li>
				</hediffs>
			</li>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDayRange>0.1~0.2</severityPerDayRange>
			</li>
		</comps>
	</HediffDef>
</Defs>