<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<Xenomorphtype.XMT_GeneSetDef>
		<defName>XMT_NovelGenes</defName>
		<genes>
			<li>XMT_GuardianCrest</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">Body_Hulk</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">Body_Standard</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">Body_Thin</li>
		</genes>
	</Xenomorphtype.XMT_GeneSetDef>

	<GeneDef MayRequire="Ludeon.RimWorld.Biotech">
		<defName>XMT_KillThirst</defName>
		<geneClass>Xenomorphtype.XenomorphGene</geneClass>
		<label>kill thirst</label>
		<labelShortAdj>kill-thirsty</labelShortAdj>
		<description>Carriers of this gene lust for the feeling of ending another's life. They will become irritated if they go for too long without killing someone in close combat.</description>
		<displayCategory>Violence</displayCategory>
		<displayOrderInCategory>60</displayOrderInCategory>
		<iconPath>UI/GeneIcons/XMT_Gene_Killthirst</iconPath>
		<enablesNeeds>
			<li>KillThirst</li>
		</enablesNeeds>
		<selectionWeight>0</selectionWeight>
		<biostatCpx>1</biostatCpx>
		<biostatMet>-2</biostatMet>
		<minAgeActive>0</minAgeActive>
		<exclusionTags>
			<li>KillThirst</li>
		</exclusionTags>
		<symbolPack>
			<prefixSymbols>
				<li><symbol>murder</symbol></li>
				<li><symbol>death</symbol></li>
				<li><symbol>kill</symbol></li>
				<li><symbol>slay</symbol></li>
				<li><symbol>rage</symbol></li>
				<li><symbol>hate</symbol></li>
				<li><symbol>snuff</symbol></li>
			</prefixSymbols>
			<suffixSymbols>
				<li><symbol>vore</symbol></li>
				<li><symbol>killer</symbol></li>
				<li><symbol>slayer</symbol></li>
			</suffixSymbols>
		</symbolPack>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">		
				<hideGene>true</hideGene>
			</li>
		</modExtensions>
	</GeneDef>
	
	<GeneDef>
		<defName>XMT_Metabolism</defName>
		<geneClass>Xenomorphtype.XenomorphGene</geneClass>
		<label>efficient metabolism</label>
		<labelShortAdj>archite-metabolic</labelShortAdj>
		<description>Carriers of this gene have an incredibly optimized metabolism.</description>
		<iconPath>UI/Icons/Genes/Gene_ArchiteMetabolism</iconPath>
		<displayCategory>Archite</displayCategory>
		<marketValueFactor>1.5</marketValueFactor>
		<biostatCpx>6</biostatCpx>
		<biostatMet>8</biostatMet>
		<biostatArc>2</biostatArc>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">		
				<hideGene>true</hideGene>
			</li>
		</modExtensions>
	</GeneDef>
	
	<GeneDef>
		<defName>XMT_GuardianCrest</defName>
		<geneClass>Xenomorphtype.XenomorphGene</geneClass>
		<label>guardian crest</label>
		<labelShortAdj>guardian</labelShortAdj>
		<description>Carriers of this gene can exhibit an extended cranium which increases durability, psychic sensitivity and social impact.</description>
		<iconPath>UI/GeneIcons/Gene_GaurdianCrest</iconPath>
		<displayCategory>Archite</displayCategory>
		<marketValueFactor>1.5</marketValueFactor>
		<biostatCpx>6</biostatCpx>
		<biostatMet>10</biostatMet>
		<biostatArc>0</biostatArc>
		<modExtensions>
			<li Class="VEF.Genes.GeneExtension">		
				<hideGene>true</hideGene>
			</li>
		</modExtensions>
		<statOffsets>
			<PsychicSensitivity>0.5</PsychicSensitivity>
			<SocialImpact>0.5</SocialImpact>
			<ArmorRating_Blunt>0.25</ArmorRating_Blunt>
			<ArmorRating_Sharp>0.25</ArmorRating_Sharp>
		</statOffsets>
		<exclusionTags>
			<li>XMT_Crests</li>
		</exclusionTags>
	</GeneDef>

</Defs>