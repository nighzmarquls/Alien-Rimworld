<?xml version="1.0" encoding="utf-8" ?>
<Defs> 
  <DutyDef>
    <defName>XMT_MetamorphIntoQueen</defName>
    <hook>HighPriority</hook>
    <socialModeMax>Off</socialModeMax>
    <thinkNode Class="ThinkNode_Priority">
      <subNodes>
        <!-- Goto my spot -->
        <li Class="JobGiver_GotoTravelDestination">
          <exactCell>true</exactCell>
          <locomotionUrgency>Jog</locomotionUrgency>
          <ritualTagOnArrival>Arrived</ritualTagOnArrival>
        </li>

        <!-- Arrived -->
        <li Class="ThinkNode_ConditionalAtDutyLocation">
          <subNodes>
            <li Class="Xenomorphtype.JobGiver_Metamorphosis">
              <soundDefMale>Speech_Throne_Male</soundDefMale>
              <soundDefFemale>Speech_Throne_Female</soundDefFemale>
            </li>
          </subNodes>
        </li>
      </subNodes>
    </thinkNode>
  </DutyDef>
  
  <DutyDef>
    <defName>XMT_PrepareMetamorphosis</defName>
    <hook>HighPriority</hook>
    <thinkNode Class="ThinkNode_Priority">
      <subNodes>
        <!-- Fetch 75 jelly-->
        <li Class="JobGiver_TakeCountToInventory">
          <def>Starbeast_Jelly</def>
          <count>75</count>
        </li>
        <li Class="JobGiver_PrepareSkylantern">
          <locomotionUrgency>Jog</locomotionUrgency>
          <def>Starbeast_Jelly</def>
          <count>75</count>
          <allowUnroofed>false</allowUnroofed>
          <desiredRadius>5</desiredRadius>
          <minDistanceToOtherReservedCell>3</minDistanceToOtherReservedCell>
        </li> 
      </subNodes>
    </thinkNode>
  </DutyDef>
</Defs>
